@model TranslationProjectManager.Models.Clients.CreateModel
@{
}

<div>
    <h1>New client details</h1>
</div>
<div>
    <form method="post">
        <div class="form-group mb-3">
            <label for="Type">Client type</label>
            <select class="form-select mb-3" asp-for="Type" asp-items="@Model.ClientTypes">
                <option value="">Choose a client type</option>
            </select>
            <span asp-validation-for="Type"></span>
        </div>
        <div class="form-group mb-3">
            <label for="Name">Client name</label>
            <input class="form-control" type="text" asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group mb-3">
            <label for="Email">Client email</label>
            <input class="form-control" type="email" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group mb-3">
            <label for="Phone">Client phone</label>
            <input class="form-control" type="text" asp-for="Phone" />
            <span asp-validation-for="Phone"></span>
        </div>
        <div class="form-group mb-3">
            <label for="Address">Client address</label>
            <input class="form-control" type="text" asp-for="Address" />
            <span asp-validation-for="Address"></span>
        </div>
        <div class="form-group mb-3">
            <label for="City">Client city</label>
            <input class="form-control" type="text" asp-for="City" />
            <span asp-validation-for="City"></span>
        </div>
        <div class="form-group mb-3">
            <label for="State">Client state</label>
            <input class="form-control" type="text" asp-for="State" />
            <span asp-validation-for="State"></span>
        </div>
        <div class="form-group mb-3">
            <label for="Zip">Client zip</label>
            <input class="form-control" type="text" asp-for="Zip" />
            <span asp-validation-for="Zip"></span>
        </div>
        <div class="form-group mb-3">
            <label for="Country">Client country</label>
            <input class="form-control" type="text" asp-for="Country" />
            <span asp-validation-for="Country"></span>
        </div>
        <div class="form-group mb-3">
            <label for="VAT">VAT</label>
            <input class="form-control" type="text" asp-for="VAT" />
            <span asp-validation-for="VAT"></span>
        </div>
        <div class="form-group mb-3">
            <input type="submit" class="btn btn-primary" value="Create" />
        </div>
    </form>
</div>
