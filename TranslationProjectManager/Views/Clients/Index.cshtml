@model TranslationProjectManager.Models.Clients.IndexModel
@{
}

<div>
    <div class="mb-3">
        <a class="btn btn-primary" asp-controller="Clients" asp-action="Create">Create</a>
    </div>
    <table class="table table-striped table-light">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Address</th>
                <th scope="col">City</th>
                <th scope="col">State</th>
                <th scope="col">Zip</th>
                <th scope="col">Country</th>
                <th scope="col">VAT</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in Model.Clients)
            {
                <tr>
                    <td>@client.Id</td>
                    <td>@client.Name</td>
                    <td>@client.Type</td>
                    <td>@client.Email</td>
                    <td>@client.Phone</td>
                    <td>@client.Address</td>
                    <td>@client.City</td>
                    <td>@client.State</td>
                    <td>@client.Zip</td>
                    <td>@client.Country</td>
                    <td>@client.VAT</td>
                    <td>
                        <a class="text-dark" asp-controller="Clients" asp-action="View" asp-route-id="@(client.Id)">View</a>
                        <a class="text-dark" asp-controller="Clients" asp-action="Edit" asp-route-id="@(client.Id)">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
